# =============================================================================
# Application
# =============================================================================
APP_ENV=development
APP_PORT=8080
APP_URL=http://localhost:5173

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=pos_user
DB_PASSWORD=pos_password
DB_NAME=pos_db
DB_SSLMODE=disable

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379

# =============================================================================
# JWT
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=168h

# =============================================================================
# SMTP (MailHog in development)
# =============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=noreply@pos.local

# =============================================================================
# Argon2id Password Hashing
# =============================================================================
ARGON2_MEMORY=65536
ARGON2_ITERATIONS=3
ARGON2_PARALLELISM=2
ARGON2_SALT_LENGTH=16
ARGON2_KEY_LENGTH=32

# =============================================================================
# S3/MinIO (Object Storage)
# =============================================================================
S3_ENDPOINT=minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=pos-uploads
S3_REGION=us-east-1
S3_USE_SSL=false
